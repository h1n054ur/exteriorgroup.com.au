{
  "name": "exteriorgroup.com.au",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "mkdir -p dist",
    "deploy": "bun run build && wrangler deploy --minify --env=\"\"",
    "deploy:staging": "bun run build && wrangler deploy --minify --env staging",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply exterior-group-db",
    "db:migrate:local": "wrangler d1 migrations apply exterior-group-db --local",
    "db:studio": "drizzle-kit studio",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4",
    "htmx.org": "^2.0.8",
    "jose": "^6.1.3",
    "marked": "^17.0.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.4",
    "@cloudflare/workers-types": "^4.20260116.0",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17",
    "wrangler": "^4.4.0"
  }
}
