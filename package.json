{
  "name": "exteriorgroup.com.au",
  "type": "module",
  "scripts": {
    "dev": "bun run build:css && wrangler dev",
    "build": "bun run build:css",
    "build:css": "bunx tailwindcss -i ./src/styles.css -o ./public/styles.css --minify",
    "deploy": "bun run build && wrangler deploy --minify --env=\"\"",
    "deploy:staging": "bun run build && wrangler deploy --minify --env staging",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply exterior-group-db",
    "db:migrate:local": "wrangler d1 migrations apply exterior-group-db --local",
    "db:studio": "drizzle-kit studio",
    "r2:upload": "wrangler r2 object put exterior-group-assets/logos/logo-teg.png --file archive/images/logos/logo-teg.png && wrangler r2 object put exterior-group-assets/corporate/corporate-mainstage.png --file archive/assets/corporate-mainstage.png",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4",
    "htmx.org": "^2.0.8",
    "jose": "^6.1.3",
    "marked": "^17.0.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.4",
    "@cloudflare/workers-types": "^4.20260116.0",
    "@tailwindcss/cli": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "drizzle-kit": "^0.31.8",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17",
    "wrangler": "^4.4.0"
  }
}
